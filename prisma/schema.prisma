generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id       String   @id @default(cuid()) // Cuid use for unique identifier
  name     String?
  email    String   @unique
  image    String?
  role     UserRole @default(USER)
  password String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
